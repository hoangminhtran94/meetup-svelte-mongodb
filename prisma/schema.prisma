generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Meetup {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  subtitle     String
  description  String
  imageUrl     String
  address      String
  contactEmail String
  isFavorite   Boolean
  createrId    String  @db.ObjectId
  user         User    @relation(fields: [createrId], references: [id])
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  lastName     String
  profileImage String
  address      String
  phone        String
  email        String   @unique
  password     String
  meetups      Meetup[]
}
